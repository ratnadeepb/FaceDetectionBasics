CC = g++

.PHONY: install clean readWrite cropResize all

STD = c++11
CFLAGS = -g -Wall -Wextra
HEADERS= `pkg-config --libs --cflags opencv`
TESTDIR = ../../test/basicImgOpsTests/
DOCDIR = ../../Docs/
BUILDIR = ../../source/basicImgOps/

readWrite:
	@$(CC) --std=$(STD) $(CFLAGS) $(TESTDIR)testRW.cpp readWriteDisplay.cpp readWriteDisplay.hpp $(HEADERS) -o $(BUILDIR)readWrite

cropResize:
	@$(CC) --std=$(STD) $(CFLAGS) $(TESTDIR)testCR.cpp cropResize.hpp cropResize.cpp $(HEADERS) -o $(BUILDIR)cropResize

rotate:
	@$(CC) --std=$(STD) $(CFLAGS) $(TESTDIR)testRot.cpp rotation.hpp rotation.cpp $(HEADERS) -o $(BUILDIR)rotate

all: readWrite cropResize rotate

clean:
	@python cleanup.py

help:
	@less $(DOCDIR)help.txt
